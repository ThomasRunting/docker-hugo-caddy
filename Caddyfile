0.0.0.0:2015 {
    root /www/public

    # sync the repo and then gen public site
    git {
        repo github.com/hyacinthus/blog
        path ../src
        args --recurse-submodules
        then hugo --destination=/www/public
    }

    # hugo plugin, support an admin console
    hugo

    # hugo plugin admin auth
    basicauth /admin user password

    # write log to stdout for docker
    log stdout
    errors stdout

}

